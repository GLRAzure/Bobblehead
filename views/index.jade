<!-- views/index.jade -->
 
extends layout
 
block content
  div(style='width:400px')
    h1= title
    p= location
    p Upload a picture of a head to get started!
 
    form(action='/'       method='post' enctype="multipart/form-data")
      input(type="file" name="userPhoto" accept="image/*" capture)
      input(type="submit" value="Upload Image" name="submit")

    img(src=image id=bobblehead)
    
    ul(class="share-buttons")
        li
            a(href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fazurebobblehead.azurewebsites.net%2F"+image+"&t=My%20bobblehead" title="Share on Facebook" target="_blank")
                img( src="images/flat_web_icon_set/color/Facebook.png")
        li
            a(href="https://twitter.com/intent/tweet?source=http%3A%2F%2Fazurebobblehead.azurewebsites.net%2F"+image+"&text=My%20bobblehead:%20http%3A%2F%2Fazurebobblehead.azurewebsites.net%2F"+image target="_blank" title="Tweet")
                img( src="images/flat_web_icon_set/color/Twitter.png")
        li
            a(href="https://plus.google.com/share?url=http%3A%2F%2Fazurebobblehead.azurewebsites.net%2F"+image target="_blank" title="Share on Google+")
                img(src="images/flat_web_icon_set/color/Google+.png")
        li
            a(href="http://www.linkedin.com/shareArticle?mini=true&url=http%3A%2F%2Fazurebobblehead.azurewebsites.net%2F"+image+"&title=My%20bobblehead&summary=check%20out%20the%20bobblehead%20I%20created.%20%23nationwidelovesazre&source=http%3A%2F%2Fazurebobblehead.azurewebsites.net%2F"+image target="_blank" title="Share on LinkedIn")
                img( src="images/flat_web_icon_set/color/LinkedIn.png")
        li
            a(href="mailto:?subject=My%20bobblehead&body=check%20out%20the%20bobblehead%20I%20created.%20%23nationwidelovesazre:%20http%3A%2F%2Fazurebobblehead.azurewebsites.net%2F"+image target="_blank" title="Email")
                img(src="images/flat_web_icon_set/color/Email.png")
</ul>